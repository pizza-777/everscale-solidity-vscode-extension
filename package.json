{
    "name": "solidity-support",
    "displayName": "Everscale Solidity Support",
    "description": "Everscale Solidity Language for Visual Studio Code",
    "version": "1.3.12",
    "keywords": [
        "solidity",
        "ton-solidity",
        "Everscale",
        "blockchain",
        "everdev",
        "highlighting",
        "code formatter"
    ],
    "publisher": "everscale",
    "license": "Apache-2.0",
    "licenses": [
        {
            "type": "Apache-2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0"
        }
    ],
    "engines": {
        "vscode": "^1.59.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/pizza-777/everscale-solidity-vscode-extension.git"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "activationEvents": [
        "onLanguage:ton-solidity",
        "onLanguage:solidity"
    ],
    "main": "./src/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "ton-solidity",
                "aliases": [
                    "ton-solidity"
                ],
                "extensions": [
                    ".sol"
                ],
                "configuration": "./ton-solidity.configuration.json",
                "icon": {
                    "light": "assets/everscale_icon_dark.svg",
                    "dark": "assets/everscale_icon_light.svg"
                }
            }
        ],
        "grammars": [
            {
                "language": "ton-solidity",
                "scopeName": "source.ton-solidity",
                "path": "./src/syntaxes/ton-solidity.json"
            }
        ]
    },
    "icon": "assets/icon.png",
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "@types/vscode": "^1.59.0",
        "eslint": "^7.32.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2"
    },
    "dependencies": {
        "everdev": "^1.1.1",
        "prettier": "^2.6.0",
        "prettier-plugin-solidity": "github:pizza-777/prettier-plugin-solidity"
    }
}
